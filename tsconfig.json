{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "build/",
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "*.config.js",
    "*.config.ts",
    ".github",
    "dist",
    "node_modules"
  ]
}
